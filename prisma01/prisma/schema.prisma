datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// 命名模型
model User {
  // @id 默认主键
  // @default 默认值
  id    Int     @id @default(autoincrement())
  // ? 可选
  name  String?
  email String  @unique
  posts Post[]
}

// 创建模型
model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User?   @relation(fields: [authorId], references: [id])
}

